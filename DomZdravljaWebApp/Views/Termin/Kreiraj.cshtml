@model DomZdravljaWebApp.Models.DTOs.KreiranjeTerminaDto

@{
    ViewBag.Title = "Kreiraj Termin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="form-container">
        <form class="kreiraj-form" action="@Url.Action("Kreiraj", "Termin")" method="POST">
            @Html.AntiForgeryToken()

            <h2>Kreiraj Termin</h2>

            <div class="form-group">
                <label for="DatumIVremeTermina">Datum i Vreme Termina</label>
                @Html.TextBoxFor(model => model.DatumIVremeTermina, new { @class = "form-control", @type = "datetime-local", required = "required" })
                @Html.ValidationMessageFor(model => model.DatumIVremeTermina, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="OpisTerapije">Opis Terapije</label>
                @Html.TextAreaFor(model => model.OpisTerapije, new { @class = "form-control", @rows = 3, required = "required" })
                @Html.ValidationMessageFor(model => model.OpisTerapije, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Kreiraj Termin</button>
        </form>
    </div>
</body>
</html>

@model DomZdravljaWebApp.Models.DTOs.UpdatePacijentDto

@{
    ViewBag.Title = "Update Pacijent";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Update.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Azuriraj", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.JMBG)

        <div class="form-group">
            @Html.LabelFor(m => m.Ime)
            @Html.TextBoxFor(m => m.Ime, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Ime, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Prezime)
            @Html.TextBoxFor(m => m.Prezime, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Prezime, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DatumRodjenja)
            @Html.TextBoxFor(m => m.DatumRodjenja, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
            @Html.ValidationMessageFor(m => m.DatumRodjenja, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Sifra)
            @Html.PasswordFor(m => m.Sifra, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Sifra, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="@Url.Action("Index", "HomePage")" class="btn btn-secondary">Cancel</a>
    }
</body>
</html>

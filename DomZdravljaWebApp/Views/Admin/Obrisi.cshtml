@model DomZdravljaWebApp.Models.DTOs.ObrisiPacijentaDto

@{
    ViewBag.Title = "Obriši Pacijenta";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="delete-confirmation-container">
        <h2>@ViewBag.Title</h2>

        <p>Unesite JMBG pacijenta koji želite da obrišete:</p>

        @using (Html.BeginForm("Obrisi", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.JMBG)
                @Html.TextBoxFor(model => model.JMBG, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.JMBG, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-danger">Obriši</button>
            <a href="@Url.Action("Index", "HomePage")" class="btn btn-secondary">Otkaži</a>
        }

    </div>
</body>
</html>
